#!/bin/bash

# The initial PWD is /.
home=/var/tmp/job_home
mkdir $home
cd $home

# Install an up-to-date version of the AWS CLI.
curl -s https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip -o awscliv2.zip
unzip -qo awscliv2.zip
sudo ./aws/install

aws s3 cp s3://$bucket_name . --recursive
chmod u+x start_job 
./start_job

sudo poweroff
