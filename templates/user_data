#!/bin/bash

exec >> /tmp/job.out
exec 2>&1

# This script is run as root and is stored as `/var/lib/cloud/instance/scripts/part-001` on EC2 instances.

# The initial PWD is /.
home=/var/tmp/job_home
mkdir $home
cd $home

# Unlike the Amazon Linux 2 AMI with NVIDIA TESLA GPU Driver, the Nvidia ones already have version 2 of the AWS CLI installed.

aws s3 cp s3://$bucket_name . --recursive
chmod u+x start_job 
./start_job

#poweroff
